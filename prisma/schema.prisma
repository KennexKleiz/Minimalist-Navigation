// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Admin {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SiteConfig {
  id                  Int      @id @default(autoincrement())
  title               String   @default("极简智能导航")
  subtitle            String   @default("探索数字世界的无限可能")
  gridColumns         Int      @default(4)
  truncateDescription Boolean  @default(true)
  containerMaxWidth   String   @default("1440px")
  favicon             String?
  logo                String?
  backgroundImage     String?
  backgroundImages    String?  // JSON string of URLs
  backgroundMode      String   @default("fixed") // "fixed" or "random"
  footerHtml          String?  // Custom footer HTML
  webdavUrl           String?
  webdavUsername      String?
  webdavPassword      String?
  siteTitleFontSize       Int      @default(16)
  siteDescriptionFontSize Int      @default(12)
  showDescriptionOnHover  Boolean  @default(true)
  updatedAt           DateTime @updatedAt
}

model Category {
  id        Int       @id @default(autoincrement())
  name      String
  sortOrder Int       @default(0)
  sections  Section[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Section {
  id         Int      @id @default(autoincrement())
  name       String
  icon       String?  // Optional icon name from Lucide
  password   String?  // Optional password for protection
  sortOrder  Int      @default(0)
  categoryId Int
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  sites      Site[]
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Site {
  id          Int      @id @default(autoincrement())
  title       String
  url         String
  description String?
  icon        String?  // URL to favicon or icon name
  sortOrder   Int      @default(0)
  likes       Int      @default(0)
  views       Int      @default(0)
  sectionId   Int
  section     Section  @relation(fields: [sectionId], references: [id], onDelete: Cascade)
  likesList   Like[]
  badge       String?  // New field for corner badge text
  tags        Tag[]    // Relation to Tags
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Tag {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  color     String   @default("blue") // blue, green, red, yellow, purple, pink, indigo, gray
  sites     Site[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Like {
  id        Int      @id @default(autoincrement())
  siteId    Int
  ip        String
  createdAt DateTime @default(now())
  site      Site     @relation(fields: [siteId], references: [id], onDelete: Cascade)

  @@unique([siteId, ip])
}
